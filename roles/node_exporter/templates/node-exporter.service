[Unit]
Description=node-exporter
Wants=network-online.target
After=network-online.target

[Service]
User=root
Type=simple
ExecStart={{ node_exporter_path }} --collector.textfile.directory /var/node_exporter/textfiles --web.listen-address={{ node_exporter_bind_addr }}

[Install]
WantedBy=multi-user.target
