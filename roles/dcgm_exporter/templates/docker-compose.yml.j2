version: "1"
services:
  dcgm-exporter:
    image: "nvidia/dcgm-exporter:{{ version }}-{{ os }}"
    restart: always
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]
    ports:
      - "127.0.0.1:9400:9400"